                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:weightSum="1">

                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_import_contacts_black_24dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Conta Corrente"
                    android:text="000000-1"/>
            </LinearLayout>

            <Button
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="PROSSEGUIR"
                android:textColor="#fff"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:onClick="goToBriefActivity"
                android:background="#47525E"/>

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/carro_4" />

</LinearLayout>
